<div id="tools_container">
  <h1 id="main_title">Password manager</h1>
  <div id="data_input_section">
      <div class="input_hldr">
          <div class="input_cover">
              <i class="material-symbols-rounded input_icon">person</i>
              <input id="login_input" class="data_input" type="text" placeholder="Enter login">
          </div>
          <button type="button" class="vis_toggler transparent_btn" id="login_vis_toggler"><i class="material-symbols-rounded btn_icon">visibility_off</i></button>
      </div>
      <div class="input_hldr">
          <div class="input_cover">
              <i class="material-symbols-rounded input_icon">encrypted</i>
              <input id="password_input" class="data_input" type="password" placeholder="Enter password">
          </div>
          <button type="button" id="pass_vis_toggler" class="vis_toggler transparent_btn"><i class="material-symbols-rounded btn_icon">visibility</i></button>
          <button type="button" id="generate_btn" class="advanced_btn"><i class="material-symbols-rounded btn_icon">casino</i> Generate</button>
      </div>
  </div>
  <div id="length_disp_container">
      <h3 id="length_label">Character length</h3>
      <p id="length_disp">...</p>
  </div>
  <input type="range" id="length_range" min="15" max="100" value="100">
  <div id="main_complexity_container">
      <span class="complexity_container">
          <input type="checkbox" name="" id="lowercase_checkbox" class="complexity_checkbox" checked>
          <p>Lowercase</p>
      </span>
      <span class="complexity_container">
          <input type="checkbox" name="" id="uppercase_checkbox" class="complexity_checkbox" checked>
          <p>Uppercase</p>
      </span>
      <span class="complexity_container">
          <input type="checkbox" name="" id="numbers_checkbox" class="complexity_checkbox" checked>
          <p>Numbers</p>
      </span>
      <span class="complexity_container">
          <input type="checkbox" name="" id="symbols_checkbox" class="complexity_checkbox" checked>
          <p>Symbols</p>
      </span>
  </div>
  <div id="save_container">
    <select name="" id="auth_portal_select">
        <option value="" disabled selected>Choose portal</option>
        <% for (let i = 0; i < data.length; i++) { %>
            <option id="<%= data[i] %>_option" value="<%= data[i] %>"><%= data[i] %></option>
        <% } %>
    </select>
    <button type="button" id="save_btn" class="advanced_btn"><i class="material-symbols-rounded btn_icon">cloud_upload</i> Save</button>
  </div>
</div>